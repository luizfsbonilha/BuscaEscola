<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.bonilha.buscaescola.EditarPerfilActivity">

    <ImageView
        android:id="@+id/escola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"

        android:src="@mipmap/ic_buscaescolaprincipal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/textNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="Nome"        />

    <EditText
        android:id="@+id/textSobrenome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNome"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Sobrenome"        />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textNome"
        android:layout_below="@+id/textSobrenome"
        android:ems="10"
        android:hint="Email" />

    <EditText
        android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textEmail"
        android:layout_below="@+id/textEmail"
        android:ems="10"
        android:hint="Telefone" />

    <Button
        android:id="@+id/salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textEmail"
        android:layout_below="@+id/textEmail"
        android:layout_marginTop="85dp"
        android:text="Salvar"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="400dp" />

    <ImageView
        android:id="@+id/cam"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_menu_camera"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="400dp" />

    <Button
        android:id="@+id/cancelar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/salvar"
        android:layout_alignBottom="@+id/salvar"
        android:layout_alignEnd="@+id/textEmail"
        android:text="Cancelar"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="400dp" />

</RelativeLayout>